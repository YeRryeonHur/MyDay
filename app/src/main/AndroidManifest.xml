<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myday1">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"

        android:usesCleartextTraffic="true">
        <receiver android:name=".NewAppWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />

            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/new_app_widget_info" />
        </receiver>

        <activity android:name=".splash"
            android:screenOrientation="portrait"
           >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ToDoList1" android:screenOrientation="portrait" />
        <activity android:name=".ToDoList2" android:screenOrientation="portrait" />
        <activity android:name=".other" android:screenOrientation="portrait" />
        <activity android:name=".colorchange" android:screenOrientation="portrait" />
        <activity android:name=".NewWriting" android:screenOrientation="portrait" />
        <activity android:name=".ReadDiary" android:screenOrientation="portrait" />
        <activity android:name=".list_3page"  android:screenOrientation="portrait"/>
        <activity android:name=".TimeTable"  android:screenOrientation="portrait"/>
        <service android:name=".ForcedTerminationService"
            android:stopWithTask="false"
          />
    </application>

</manifest>